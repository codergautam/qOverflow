<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a Question</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        [contentEditable=true]:empty:not(:focus):before{
            content:attr(data-text)
        }

        #preview h1 {
            font-size:116px;
            line-height: 1.2;
        }
        #preview h2 {
            font-size:58.39px;
            line-height: 1.2;
        }
        #preview h3 {
            font-size:53.59px;
            line-height: 1.2;
        }
        #preview h4 {
            font-size: 48.8px;
            line-height: 1.2;
        }
        #preview h5 {
            font-size: 44px;
            line-height: 1.2;
        }
        #preview h6 {
            font-size:39.19px;
            line-height: 1.2;
        }
        #preview p {
            font-size:30px;
            line-height: 1.2;
        }
    </style>
</head>

<body class="bg-gray-200">

    <div class="m-5 bg-white shadow-md rounded-lg hover:shadow-xl text-4xl">
        <div class="m-4">
            <h1 class="p-3 text-center text-3xl font-extrabold md:text-5xl">Create a question</h1>
        </div>
        <div class="m-5">
            <form action="/questions" method="POST">
                <div class="flex">
                    <div class="flex-1 items-center justify-center pb-8">
                        <input type="hidden" name="username" value="<% username %> ">
                        <div class="flex mb-10 space-x-4 mb-15 items-center justify-center">
                            <label class="text-2xl font-extrabold block">Title:</label>
                            <input maxlength="150" type="text" id="text150" name="title"
                                class="text-xl outline-black rounded outline outline-4 text-center font-bold block h-10 w-full md:h-12 md:w-96" />
                        </div>
                        <div class='flex-none md:flex md:divide-x-0 items-center'>
                            <div class='flex flex-wrap mb-10 space-x-4 left-0 m-3' id="editor">
                                <label class='m-2 text-2xl font-bold'>Content:</label>
                                <textarea id='text3000' maxlength='3000' type='text' name="text" onkeyup='val(this);'
                                    class='m-2 p-3 text-2xl outline-black rounded outline outline-4 text-left font-bold block h-48 w-full md:h-80 md:w-full' placeholder="Enter Markdown content..."></textarea>
                            </div>
                            <div class='flex flex-1 flex-wrap mb-10 space-x-4 right-0 m-3' id='viewer'>
                                <label class='m-2 text-2xl font-bold'>View/Editor:</label>
                                <article id="preview" data-text="Output of Markdown shown here..." contenteditable="false" 
                                    class=' break-words md:break-words md:overflow-scroll overflow-scroll m-2 p-3 outline-black rounded outline outline-4 text-left block text-gray-400 h-48 min-w-full md:h-80 md:min-w-full'>
                                </article>
                            </div>
                        </div>
                        <div class="flex justify-center">
                            <input type="submit" class="cursor-pointer rounded-lg bg-gray-200 hover:ring-2 hover:ring-offset-1 hover:ring-gray-200 px-2 py-2 font-semibold text-2xl text-gray-700" value="Create Question">
                        </div>
                    </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/2.1.0/showdown.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>

        $(document).ready(function () {
            $("#text150").keypress(function (e) {
                var length = this.value.length;
                if (length >= 150) {
                    e.preventDefault();
                    alert("More than 150 characters not allowed in the Title");
                }
            });

        });
        $(document).ready(function () {
            $("#text3000").keypress(function (e) {
                var length = this.value.length;
                if (length >= 3000) {
                    e.preventDefault();
                    alert("More than 3000 characters not allowed in the Body");
                }
            });

        });
        $(document).ready(function () {
            $("#text200").keypress(function (e) {
                var length = this.value.length;
                if (length >= 200) {
                    e.preventDefault();
                    alert("More than 200 characters not allowed in the Sub Title");
                }
            });

        });
    </script>
    
    <script>
        function val(e) {
            ghf = e.value;
            console.log(marked.parse(ghf))
            codeblock = marked.parse(ghf);
            document.getElementById("viewer").innerHTML = "<label class='text-2xl font-bold'>View/Editor:</label><article id='preview' data-text='Output of Markdown shown here...' contenteditable='false' class='prose prose-h1:text-red-500  break-words overflow-scroll m-2 p-3 outline-black rounded outline outline-4 text-left block text-black h-48 min-w-full md:h-80 md:min-w-full'>"+codeblock+"</article>";
        }
        // function qwerty(e) {
        //     ghf = e.value;
        //     console.log(ghf);
        //     codeblock = ghf;
        //     document.getElementById("viewer").innerHTML = "<label class='text-xl font-bold'>View:</label><div id='preview' contentEditable=true data-text='Output of Markdown shown here...'class='m-2 p-3 text-2xl outline-black rounded outline outline-4 text-left font-bold block text-black h-48 min-w-full md:h-80 md:min-w-full'>"+codeblock+"</div>";
        // }
        $("#viewer").load(location.href + " #viewer");
        $("#editer").load(location.href + " #editor");
